{
    "name": "phpyh/scaffolder",
    "description": "PHPyh Scaffolder",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Valentin Udaltsov",
            "email": "udaltsov.valentin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-filter": "*",
        "composer/semver": "^3.4.4",
        "symfony/console": "^8",
        "symfony/filesystem": "^8",
        "symfony/finder": "^8"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "symfony/var-dumper": "^8"
    },
    "autoload": {
        "psr-4": {
            "PHPyh\\Scaffolder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPyh\\Scaffolder\\": "tests/"
        }
    },
    "config": {
        "bump-after-update": true,
        "sort-packages": true
    }
}
